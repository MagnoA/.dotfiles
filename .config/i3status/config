# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "cpu_temperature 0"
order += "cpu_temperature 1"
#order += "cpu_temperature 2"
#order += "cpu_temperature 3"
order += "battery 0"
order += "ipv6"
order += "run_watch DHCP"
order += "disk /"
order += "run_watch VPN"
order += "wireless _first_"
#order += "load"
order += "ethernet _first_"
order += "tztime local"


wireless _first_ {
        format_up = "Wireless: (%quality at %essid) %ip"
        format_down = ""
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "Ethernet: (%speed) | IP: %ip"
        format_down = ""
}

battery 0 {
        format = "%status %percentage %remaining"
	format_down = ""
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
	format_down = ""
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
	format_down = ""
}

tztime local {
        format = "%Y-%m-%d | %H:%M:%S"
}

load {
        format = "1min"
}

disk "/" {
        format = "%avail"
}

ipv6 {
	format_down = ""
}

cpu_temperature 0 {
 	format = "CPU 1: %degrees °C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp2_input" 
}

cpu_temperature 1 {
	format = "CPU 2: %degrees °C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp3_input"
}

cpu_temperature 2 {
	format = "CPU 3: %degrees °C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp4_input"
}

cpu_temperature 3 {
	format = "CPU 4: %degrees °C"
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon1/temp5_input"
}
